{% extends 'base_back.html.twig' %}

{% block title %}Administration rEARding{% endblock %}

{% block body %}
    <div class="leading-loose">
        {{ form_start(form, {'attr': {'class': 'max-w-3xl mx-auto p-10'}}) }}
            <p class="text-gray-800 font-medium">{{ product.uuid ? 'Edition d\'un produit' : 'Nouveau produit' }}</p>
            {{ form_errors(form) }}
            <div class="grid grid-cols-2">
                {{ form_row(form.titre) }}
                {{ form_row(form.titreOriginal) }}
            </div>
            <div class="grid grid-cols-3">
                {{ form_row(form.anneeEdition) }}
                {{ form_row(form.nationalite) }}
                {{ form_row(form.genres) }}
            </div>
            <div class="grid">
                {{ form_row(form.description) }}
            </div>
            <div class="grid grid-cols-4">
                {{ form_row(form.typeProduit) }}
                {{ form_row(form.prix, {'attr': { 'suffix': 'â‚¬'}}) }}
                {{ form_row(form.note) }}
            </div>
            <div class="flex">
                <a href="{{ path('admin_index') }}" class="ml-auto border border-yellow-500 bg-yellow-500 text-white rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-yellow-600 focus:outline-none focus:shadow-outline">Annuler</a>
                <button type="submit" class="ml-4 border border-green-500 bg-green-500 text-white rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-green-600 focus:outline-none focus:shadow-outline">Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}