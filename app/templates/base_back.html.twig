        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="my-auto w-full">
        <div class="min-h-screen w-full bg-gray-100">
            <nav
                    class="font-sans flex flex-col text-center sm:flex-row sm:text-left sm:justify-between py-4 px-6 bg-white shadow sm:items-baseline w-full">
                <div class="mb-2 sm:mb-0">
                    <a href="{{ path('admin_index') }}" class="text-2xl no-underline text-grey-darkest hover:text-blue-dark">Admin rEARding</a>
                </div>
                <div class="flex">
